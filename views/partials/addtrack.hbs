<form class="ui stacked segment form" action="/movie/{{movie.id}}/addtrack" method="POST">
  <div class="four fields">
    <div class="field">
      <label for="title">Song Title</label>
      <input type="text" name="title" autofocus required title = "Please include a valid Title"
      placeholder="Title">
    </div>
    <div class="field">
      <label for="artist">Artist</label>
      <input type="text" name="artist" required title = "Please include a valid Artist"
      placeholder="Artist"  >
    </div>
    <div class="field">
      <label for="genre">Genre</label>
      <select id="genre" name="genre">
        <option value="Misc" selected>Misc</option>
        <option value="Show Tune">Show Tune</option>
        <option value="Pop">Pop</option>
      </select>
    </div>
    <div class="field">
      <label for="duration">Duration</label>
      <input type="text" name="duration" required title = "Please include a valid Duration"
      placeholder="Duration"  >
    </div>
  </div>
  <button class="ui blue submit button">Add Track</button>
</form>