{{> menu id="dashboard"}}

{{#each playlists}}
  <section class="ui segment">
    <h2 class="ui header">
      {{title}}
    </h2>
    <p> Total Duration: {{duration}} </p>
    <a href="/playlist/{{id}}"><i class = "open folder icon"></i></a>
    <a href="/playlist/{{../playlist.id}}/deleteplaylist/{{id}}" class="ui tiny red button">Delete Song</a>
    <a href="/playlist/{{id}}"><i class = "trash icon"></i></a>
  </section>
{{/each}}